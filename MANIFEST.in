include README.md
include LICENSE
include CHANGELOG.md
include DEVELOPMENT.md
include example_settings.py

# Include django_admin_log_viewer package files
recursive-include django_admin_log_viewer *.py
recursive-include django_admin_log_viewer/static *
recursive-include django_admin_log_viewer/templates *
recursive-include django_admin_log_viewer/templatetags *.py

# Include tests for distribution
recursive-include tests *.py

# Exclude sample project and development files
prune myproject
prune .vscode
prune .git
prune venv
prune django_admin_log_viewer.egg-info
prune build
prune dist
exclude .gitignore
exclude requirements.txt

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
global-exclude *.DS_Store
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov
